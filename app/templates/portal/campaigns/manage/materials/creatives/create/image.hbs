{{#model-form
  model=model.creative
  shouldAutosave=false
  onSubmit=(action "create") as |form|
}}
  {{progress-bar show=isActionRunning}}
  {{#bs-modal/body}}
    {{ partial "manage/campaign/forms/creative-image" }}
  {{/bs-modal/body}}

  {{#bs-modal/footer class="d-flex justify-content-between"}}
    {{model-save-button disabled=isActionRunning}}
    {{confirm-button
      icon="cross"
      label="Cancel"
      class="btn-warning"
      disabled=isActionRunning
      onConfirm=(route-action "hideModal")
    }}
  {{/bs-modal/footer}}
{{/model-form}}
