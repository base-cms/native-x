{{#model-form
  model=model
  shouldAutosave=(if model.isNew false true)
  onSubmit=(route-action "create") as |form|
}}
  <div class="card model-form">
    <div class="card-header"></div>
    <div class="card-body">
      {{ partial "campaign/forms/details" }}
    </div>
    <div class="card-footer">
      {{model-save-button disabled=isActionRunning}}
    </div>
  </div>
{{/model-form}}
