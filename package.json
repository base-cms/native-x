{
  "name": "fortnight-web",
  "version": "0.1.0",
  "main": "index.js",
  "author": "Jacob Bare <jacob@limit0.io>",
  "license": "MIT",
  "scripts": {
    "start": "yarn stop && $npm_package_docker_dev_install && $npm_package_docker_dev_up",
    "start:local": "PORT=3000 ./node_modules/.bin/nodemon server.js --exec \"./node_modules/.bin/eslint src/server/**/*.js && node\"",
    "stop": "$npm_package_docker_dev_down",
    "terminal": "if [ \"$(docker inspect -f {{.State.Running}} nextjssandbox_app_1 2>/dev/null)\" = true ]; then docker exec -it nextjssandbox_app_1 /bin/bash; else printf \"$npm_package_docker_terminal_error\" && exit 1; fi"
  },
  "docker": {
    "terminal": {
      "error": "\n\n\t ERROR: Container is not running -- did you 'yarn start'? \n\n"
    },
    "dev": {
      "install": "docker-compose -p nextjssandbox run --entrypoint yarn app",
      "up": "docker-compose -p nextjssandbox up",
      "down": "docker-compose -p nextjssandbox down"
    }
  },
  "dependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "nodemon": "^1.17.5"
  }
}
